<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/b13"
        android:layout_alignStart="@id/b13"
        android:layout_alignRight="@id/b16"
        android:layout_alignEnd="@id/b16"
        android:textSize="40dp" />
    <Button
        android:id="@+id/b1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="3"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b1"
        android:layout_alignBaseline="@id/b1"
        android:text="2"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b2"
        android:layout_alignBaseline="@id/b2"
        android:text="1"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b3"
        android:layout_alignBaseline="@id/b3"
        android:text="/"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b5"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/b1"
        android:text="6"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b6"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b5"
        android:layout_alignBaseline="@id/b5"
        android:text="5"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b7"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b6"
        android:layout_alignBaseline="@id/b6"
        android:text="4"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b8"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b7"
        android:layout_alignBaseline="@id/b7"
        android:text="*"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b9"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/b5"
        android:text="9"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b10"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b9"
        android:layout_alignBaseline="@id/b9"
        android:text="8"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b11"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b10"
        android:layout_alignBaseline="@id/b10"
        android:text="7"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b12"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b11"
        android:layout_alignBaseline="@id/b11"
        android:text="-"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b13"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/b9"
        android:text="C"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b14"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b13"
        android:layout_alignBaseline="@id/b13"
        android:text="0"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b15"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b14"
        android:layout_alignBaseline="@id/b14"
        android:text="."
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b16"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b15"
        android:layout_alignBaseline="@id/b15"
        android:text="+"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/b17"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/b13"
        android:layout_alignLeft="@id/b13"
        android:layout_alignStart="@id/b13"
        android:layout_alignRight="@id/b16"
        android:layout_alignEnd="@id/b16"
        android:text="="
        android:textSize="25dp"
        />

</RelativeLayout>